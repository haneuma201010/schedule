<% if @school_user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@school_user.errors.count, "error") %>. <!--errorの数を数えてくれる。pluralizeは複数形にしてくれる-->
    </div>
    <ul>
    <% @school_user.errors.full_messages.each do |msg| %> <!--エラーの内容を一覧にして表示する-->
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>